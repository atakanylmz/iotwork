
@{
    ViewBag.Title = "AddDevice";
}

@using iotWork.Models
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yeni Cihaz
            </header>
            <div class="panel-body">
                <div class=" form">
                    <form class="cmxform form-horizontal tasi-form" id="deviceForm" method="post" action="/Amount/AddDevice">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Adı</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="name" name="deviceName" minlength="2" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">IP Adresi</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="ip" type="text" name="deviceIP" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="curl" class="control-label col-lg-2">Şifresi</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="pw" type="password" name="devicePassword" />
                            </div>
                        </div>


                        <div class="form-group ">
                            <label for="ccomment" class="control-label col-lg-2">Cihaz Tipi</label>
                            <div class="col-lg-10">
                                <select class="form-control m-bot15">
                                    @foreach (iotWork.Models.Type t in ViewBag.types)
                                    {
                                        <option value="@t.typeID">@t.typeName</option>
                                    }
                                    
                                </select>
                            </div>
                        </div>


                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Kaydet</button>
                            </div>
                       
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>





